{% extends 'base.html.twig' %}

{% block title %}Chapter index{% endblock %}

{% block body %}
    <h1>Chapter index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>NumberOfSigns</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chapter in chapters %}
            <tr>
                <td>{{ chapter.id }}</td>
                <td>{{ chapter.title }}</td>
                <td>{{ chapter.content }}</td>
                <td>{{ chapter.numberOfSigns }}</td>
                <td>
                    <a href="{{ path('chapter_show', {'id': chapter.id}) }}">show</a>
                    <a href="{{ path('chapter_edit', {'id': chapter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# Pas bon enregistre l'id du manuscrit au lieu de celui du chapitre #}
    {% for chapter in chapters %}
        <a href="{{ path('chapters_list', {'id': chapter.id}) }}">Create new</a>
    {% endfor %}

{% endblock %}
