{% extends 'base.html.twig' %}

{% block title %}Manuscript index{% endblock %}

{% block body %}
    <h1>Manuscript index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for manuscript in manuscripts %}
            <tr>
                <td>{{ manuscript.id }}</td>
                <td>{{ manuscript.title }}</td>
                <td>{{ manuscript.description }}</td>
                <td>
                    <a href="{{ path('edition_tools_show', {'id': manuscript.id}) }}">show</a>
                    <a href="{{ path('edition_tools_edit', {'id': manuscript.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('edition_tools_new') }}">Create new</a>
{% endblock %}
